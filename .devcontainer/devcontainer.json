{
	"name": "Nx Monorepo",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"forwardPorts": [4200, 8080, 4873],
	"postCreateCommand": "pnpm install",
	"customizations": {
		"vscode": {
			"settings": {
				"editor.fontFamily": "'Fira Code', Consolas, 'Courier New', monospace",
				"editor.fontLigatures": "'cv17', 'cv18', 'cv31', 'cv30', 'ss02', 'cv22', 'ss08', 'ss09', 'cv25', 'cv26', 'cv32', 'cv27', 'cv28', 'ss07'",
				"terminal.integrated.fontFamily": "'Fira Code', monospace",
				// PASTE YOUR SETTINGS.JSON CONTENT HERE
				"security.workspace.trust.untrustedFiles": "open",
				"editor.largeFileOptimizations": false,
				"[python]": {
					"editor.formatOnType": true
				},
				"javascript.suggest.paths": false,
				"typescript.suggest.paths": false,
				"git.autofetch": true,
				"vscode-edge-devtools.webhintInstallNotification": true,
				"workbench.iconTheme": "Monokai Pro (Filter Spectrum) Icons",
				"workbench.colorTheme": "Monokai Pro (Filter Spectrum)",
				"indentRainbow.indicatorStyle": "light",
				"editor.fontSize": 12,
				"debug.console.fontSize": 12,
				"terminal.integrated.fontSize": 12,
				"chat.editor.fontSize": 12,
				"markdown.preview.fontSize": 12,
				"github.copilot.nextEditSuggestions.enabled": true,
				"github.copilot.enable": {
					"*": true,
					"markdown": true,
					"scminput": false,
					"plaintext": true
				},
				"dev.containers.defaultExtensions": ["mutantdino.resourcemonitor"],
				"editor.formatOnSave": true,
				"editor.defaultFormatter": "esbenp.prettier-vscode",
				"editor.wordWrap": "on",
				"editor.formatOnPaste": true,
				"editor.aiStats.enabled": true,
				"editor.autoIndentOnPaste": true,
				"editor.definitionLinkOpensInPeek": true,
				"editor.detectIndentation": false,
				"editor.foldingImportsByDefault": true,
				"editor.hover.delay": 200,
				"editor.indentSize": "tabSize",
				"editor.insertSpaces": false,
				"editor.linkedEditing": true,
				"editor.unfoldOnClickAfterEndOfLine": true,
				"editor.wrapOnEscapedLineFeeds": true,
				"diffEditor.codeLens": true,
				"diffEditor.experimental.showMoves": true,
				"diffEditor.hideUnchangedRegions.enabled": true,
				"diffEditor.maxComputationTime": 15000,
				"diffEditor.maxFileSize": 200,
				"editor.minimap.showSlider": "always",
				"editor.inlineSuggest.edits.allowCodeShifting": "never",
				"editor.quickSuggestions": {
					"comments": "on",
					"strings": "on"
				},
				"files.readonlyFromPermissions": true,
				"files.trimFinalNewlines": true,
				"files.trimTrailingWhitespace": true,
				"prettier.endOfLine": "crlf",
				"prettier.printWidth": 160,
				"prettier.singleQuote": true,
				"prettier.tabWidth": 4,
				"prettier.useEditorConfig": false,
				"prettier.useTabs": true,
				"prettier.vueIndentScriptAndStyle": true,
				"workbench.commandPalette.experimental.suggestCommands": true,
				"testing.coverageToolbarEnabled": true,
				"redhat.telemetry.enabled": false,
				"console-ninja.featureSet": "Community",
				"[dockercompose]": {
					"editor.insertSpaces": true,
					"editor.tabSize": 2,
					"editor.autoIndent": "advanced",
					"editor.quickSuggestions": {
						"other": true,
						"comments": false,
						"strings": true
					},
					"editor.defaultFormatter": "redhat.vscode-yaml"
				},
				"[github-actions-workflow]": {
					"editor.defaultFormatter": "redhat.vscode-yaml"
				},
				"[markdown]": {
					"editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
				},
				"docker.extension.enableComposeLanguageServer": false
			},
			"extensions": [
				"42crunch.vscode-openapi",
				"aaron-bond.better-comments",
				"antfu.iconify",
				"bradlc.vscode-tailwindcss",
				"chakrounanas.turbo-console-log",
				"christian-kohler.npm-intellisense",
				"christian-kohler.path-intellisense",
				"chrmarti.regex",
				"davidanson.vscode-markdownlint",
				"dbaeumer.vscode-eslint",
				"docker.docker",
				"eamodio.gitlens",
				"editorconfig.editorconfig",
				"esbenp.prettier-vscode",
				"firsttris.vscode-jest-runner",
				"formulahendry.auto-rename-tag",
				"github.codespaces",
				"github.copilot",
				"github.copilot-chat",
				"github.remotehub",
				"github.vscode-github-actions",
				"github.vscode-pull-request-github",
				"gregorbiswanger.json2ts",
				"monokai.theme-monokai-pro-vscode",
				"ms-azuretools.vscode-containers",
				"ms-edgedevtools.vscode-edge-devtools",
				"ms-playwright.playwright",
				"ms-vscode-remote.remote-containers",
				"ms-vscode-remote.remote-ssh",
				"ms-vscode-remote.remote-ssh-edit",
				"ms-vscode-remote.remote-wsl",
				"ms-vscode-remote.vscode-remote-extensionpack",
				"ms-vscode.azure-repos",
				"ms-vscode.live-server",
				"ms-vscode.powershell",
				"ms-vscode.remote-explorer",
				"ms-vscode.remote-repositories",
				"ms-vscode.remote-server",
				"ms-vsliveshare.vsliveshare",
				"mutantdino.resourcemonitor",
				"nrwl.angular-console",
				"nuxtr.nuxtr-vscode",
				"oderwat.indent-rainbow",
				"orta.vscode-jest",
				"pmneo.tsimporter",
				"pnp.polacode",
				"prisma.prisma",
				"redhat.vscode-yaml",
				"stringham.move-ts",
				"tboby.cwtools-vscode",
				"tboby.paradox-syntax",
				"tomoki1207.pdf",
				"tonybaloney.vscode-pets",
				"unifiedjs.vscode-mdx",
				"vitest.explorer",
				"vscode-icons-team.vscode-icons",
				"vue.volar",
				"wallabyjs.console-ninja",
				"wix.vscode-import-cost",
				"yoavbls.pretty-ts-errors",
				"yzhang.markdown-all-in-one"
			]
		}
	}
}
