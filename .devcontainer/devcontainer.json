{
  "name": "Nx Monorepo Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "forwardPorts": [3000, 4200],
  "customizations": {
    "vscode": {
      "extensions": ["nrwl.angular-console", "dbaeumer.vscode-eslint", "esbenp.prettier-vscode", "ms-azuretools.vscode-docker"]
    }
  },
  "postCreateCommand": "pnpm -w install",
  "remoteUser": "node"
}
