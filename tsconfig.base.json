{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@my-projects-monorepo/source"],
    "baseUrl": ".",
    "paths": {
      "@emperorrag/better-auth-utilities": ["libs/better-auth-utilities/src/index.ts"],
      "@my-projects-monorepo/prisma-client": ["tools/postgresql/better-auth-db/prisma/generated/client"]
    }
  }
}
